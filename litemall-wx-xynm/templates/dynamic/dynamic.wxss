/* templates/dynamic/dynamic.wxss */
.dynamic-topic{
  margin:30rpx;
  background:#FFF;
}

.dynamic{
  background:#fff;
  display:flex;
  flex-direction: column;
  padding: 20rpx 30rpx;
}

.userInfo{
  display: flex;
  justify-content: space-between;
}

.userInfoLeft{
  display: flex;
  height: 80rpx;
}

.userInfoLeft .avatar {
  width:80rpx;
  height:80rpx;
  border-radius:50%;
}

.userInfoLeft .name{
  display:block;
  height:50rpx;
  line-height:50rpx;
  color:#000;
  font-weight: bold;
  font-size:37.5rpx;
  margin-left:10rpx;
}

.userInfoRight{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items:center;
}

.userInfoRight button{
  border:1rpx solid gray;
  border-radius:10%;
  height:50rpx;
  font-size:20rpx;
  background:#fff;
}

.dynamicContent{
  display: flex;
  flex-direction: column;
  font-size: 20rpx;
  margin: 20rpx 0rpx;
}

.dynamicContent text{
  margin: 5rpx 0rpx;
}

.flex-wrap{
  display: flex;
  justify-content: space-around
}

.icon{
  height: 40rpx;
  width: 40rpx;
  margin: 0rpx 5rpx;
}

.topic__reply{
  font-size: 20rpx;
  margin-left: 5rpx;
}

.topic__reply_number{
  font-size: 25rpx;
  margin-left: 5rpx;
}

.flex-item{
  display: flex;
  justify-content: center;
  align-items: center;
}

.social-image{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.image-item image{
  width: 220rpx;
}

.images-1 image{
  width: 660rpx;
}

.images-2 image{
  width: 330rpx;
}

.images-3 image{
  width: 330rpx;
}

.images-4 image{
  width: 330rpx;
}

 .meta__header {
	margin-top: 20rpx;
  margin-left: 20rpx;
}

 .meta__body {
  margin-top: 20rpx;
}

 .topic__author {
  font-weight: bold;
  font-size: 16px;
}

 .topic__content {
  margin-top: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}

 .topic__meta {
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 30px;
}