<import is="topicItem" src="/templates/dynamic/dynamic.wxml"/>
<view class="container">
  <view class="profile-info" bindtap="goLogin">
    <image class="avatar" src="{{userInfo.avatar}}"></image>
    <view class="info">
      <text class="name">{{userInfo.nickname}}</text>
    </view>
  </view>
  <view class="user-social">
    <view class='little-space'>
      <view class='user_row_left'></view>
    </view>
    <view class="user-social-view user_column">
       <view class='user_column_item' data-index='1' bindtap='goFollow' data-route='/pages/ucenter/follow/follow'>
          <text class="user_column_item_number" >0</text>
          <view class='user_column_item_text'>关注</view>
      </view>
       <view class='user_column_item' bindtap='goFans' data-index='1' data-route='/pages/ucenter/fans/fans'>
          <text class="user_column_item_number" >0</text>
          <view class='user_column_item_text'>粉丝</view>
      </view>
       <view class='user_column_item' bindtap='goLeavesay' data-index='1' data-route='/pages/ucenter/leavesay/leavesay'>
          <text class="user_column_item_number" >{{dynamicCount}}</text>
          <view class='user_column_item_text'>动态</view>
      </view>
       <view class='user_column_item' bindtap='goFootprint' data-index='1'>
        <text class="user_column_item_number">0</text>
        <view class='user_column_item_text'>足迹</view>
      </view>
    </view>
     </view>
    <view class="spliter-25"></view>
    <scroll-view 
      class="topic__list"
      scroll-y
      bindscrolltolower="loadMore"
    >
    <view class="a-section a-topic" wx:if="topics.length > 0">
      <view class="h">
        <view>
          <navigator url="/pages/topic/topic">
            <text class="txt">我的动态</text>
          </navigator>
        </view>
      </view>
    </view>
      <template
        is="topicItem"
        wx:for="{{dynamics}}"
        wx:key="{{index}}"
        data="{{item}}"
      />
      <view class="infinite__state">
        <block wx:if="{{dynamicCount > dynamics.length}}">
          <text>正在加载中...</text>
        </block>
        <block wx:else>
          <text>没有更多数据了</text>
        </block>
      </view>
	</scroll-view>
</view>
